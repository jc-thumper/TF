<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data noupdate="1">
        <!--Forecast Group-->
        <record model="forecast.group" id="forecast_group_a">
            <field  name="name">group_a</field>
            <field  name="demand_clsf_id" eval="ref('demand_classification_seasonal')"/>
            <field  name="period_type">monthly</field>
            <field  name="frequency">monthly</field>
            <field  name="no_periods">12</field>
        </record>

        <record model="forecast.group" id="forecast_group_b">
            <field  name="name">group_b</field>
            <field  name="demand_clsf_id" eval="ref('demand_classification_smooth')"/>
            <field  name="period_type">monthly</field>
            <field  name="frequency">monthly</field>
            <field  name="no_periods">12</field>
        </record>

        <record model="forecast.group" id="forecast_group_c">
            <field  name="name">group_c</field>
