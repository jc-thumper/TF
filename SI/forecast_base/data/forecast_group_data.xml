            <field  name="frequency">quarterly</field>
            <field  name="no_periods">4</field>
        </record>

        <record model="forecast.group" id="forecast_group_e">
            <field  name="name">group_e</field>
            <field  name="demand_clsf_id" eval="ref('demand_classification_erratic')"/>
            <field  name="period_type">weekly</field>
            <field  name="frequency">weekly</field>
            <field  name="no_periods">52</field>
        </record>

        <record model="forecast.group" id="forecast_group_not_enough_data">
            <field  name="name">not_enough_data</field>
            <field  name="demand_clsf_id" eval="ref('demand_classification_not_enough_data')"/>
            <field  name="period_type">weekly</field>
            <field  name="frequency">weekly</field>
            <field  name="no_periods">52</field>
        </record>
    </data>
</odoo>
