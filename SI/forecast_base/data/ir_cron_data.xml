<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_update_forecast_result_adjustment" model="ir.cron">
            <field name="name">SI: Update Forecast Result Adjustment</field>
            <field name="model_id" ref="forecast_base.model_forecast_result_adjust"/>
            <field name="state">code</field>
            <field name="code">model.run_scheduler_update_fore_res_adj()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 00:00:00')" />
            <field name="numbercall">-1</field>
        </record>
    </data>
</odoo>
