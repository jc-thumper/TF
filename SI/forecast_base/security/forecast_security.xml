<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record model="ir.module.category" id="module_category_forecast_management">
            <field name="name">Forecasting</field>
            <field name="description">Helps you handle the forecasting task.</field>
            <field name="sequence">21</field>
        </record>

        <record id="group_forecast_review_staff" model="res.groups">
            <field name="name">Forecast Review Staff</field>
            <field name="comment">Forecast Review Staff Permission Group.</field>
            <field name="category_id" ref="forecast_base.module_category_forecast_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_forecast_operation_manager" model="res.groups">
            <field name="name">Forecast Operation Manager</field>
            <field name="comment">Forecast Operation Manager Permission Group.</field>
            <field name="category_id" ref="forecast_base.module_category_forecast_management"/>
            <field name="implied_ids" eval="[(4, ref('forecast_base.group_forecast_review_staff'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="group_forecast_manager" model="res.groups">
            <field name="name">Forecast Manager</field>
            <field name="comment">Forecast Manager Permission Group.</field>
            <field name="category_id" ref="forecast_base.module_category_forecast_management"/>
            <field name="implied_ids" eval="[(4, ref('forecast_base.group_forecast_operation_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>
