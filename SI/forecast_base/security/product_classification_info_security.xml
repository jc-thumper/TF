            <field name="name">product_classification_info company</field>
            <field name="model_id" ref="forecast_base.model_product_classification_info"/>
            <field name="global" eval="True"/>
            <field name="domain_force">
                [('company_id','=',user.company_id.id)]
            </field>
        </record>

        <record model="ir.rule" id="product_forecast_config_rule">
            <field name="name">product_forecast_config company</field>
            <field name="model_id" ref="forecast_base.model_product_forecast_config"/>
            <field name="global" eval="True"/>
            <field name="domain_force">
                [('company_id','=',user.company_id.id)]
            </field>
        </record>
    </data>
</odoo>
