<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_company_form_inherit_forecast_base" model="ir.ui.view">
        <field name="name">res.company.form.inherit.forecast.connector</field>
        <field name="model">res.company</field>
        <field name="inherit_id"
               ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//notebook" position="inside">
                    <page name="forecast_base" string="Forecast Base">
                        <group name="forecast_config" string="Forecast Configuration">
                            <group name="hour_config">
                                <field name="auto_compute_sync_time"/>
                                <field name="sync_time_compute" attrs="{'invisible': [('auto_compute_sync_time', '=', False)]}"/>
                                <field name="sync_time_manual" attrs="{'invisible': [('auto_compute_sync_time', '=', True)]}"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </data>
        </field>
    </record>
</odoo>
