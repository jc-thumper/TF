<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_res_config_settings_view_form_forecast_base" model="ir.ui.view">
            <field name="name">inherit.res.config.settings.view.form.forecast.base</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]
                             //div[@data-string='Inventory']" position="inside">
                    <div class="forecasting_block" groups="stock.group_stock_manager">
                        <h2>Inventory with Forecasts</h2>

                        <div class="row mt16 o_settings_container forecasting_container">
                            <div id="company_config_box" class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div id="company_forecast_config" class="o_setting_right_pane">
                                    <span class="o_form_label">Forecast Level</span>
                                    <span class="fa fa-lg fa-building-o"
                                          title="Values set here are company-specific."
                                          aria-label="Values set here are company-specific."
                                          groups="base.group_multi_company"
                                          role="img"/>
                                    <div class="text-muted">
                                        When to start Forecasting
                                    </div>
                                    <div id="company_forecast_level" class="row mt16">
                                        <label for="forecast_level_id" class="col-md-4 o_light_label"/>
                                        <field name="forecast_level_id" required="1" options="{'no_create': True, 'no_create_edit':True}"/>
                                    </div>
                                </div>
                            </div>

                            <div id="visualize_config_box" class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Visualizing the Forecasts Configurable</span>
                                    <div class="text-muted">
                                        The Number of Periods in the past/future will visualize
                                    </div>
                                    <div class="row mt16">
                                        <label for="past_periods" class="col-md-4 o_light_label"/>
                                        <field name="past_periods" class="text-right" required="1"/> periods
                                    </div>
                                    <div class="row mt16">
                                        <label for="future_periods" class="col-md-4 o_light_label"/>
                                        <field name="future_periods" class="text-right" required="1"/> periods
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
