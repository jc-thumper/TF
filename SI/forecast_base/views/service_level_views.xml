<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Tree view-->
    <record model="ir.ui.view" id="service_levels_view_tree">
        <field name="name">service.levels.view.tree</field>
        <field name="model">product.classification.info</field>
        <field name="arch" type="xml">
            <tree default_order="product_id asc" create="false" edit="false" delete="false">
                <field name="product_id" string="Name"/>
                <field name="service_level_id" string="Service Level" invisible="1"/>
                <field name="warehouse_id" string="Warehouse Location" invisible="1"/>
            </tree>
        </field>
    </record>

    <!--Search view-->
    <record id="view_service_level_filter" model="ir.ui.view">
        <field name="name">service.level.search</field>
        <field name="model">product.classification.info</field>
        <field name="arch" type="xml">
            <search string="Service Levels">
                <filter name="group_service_level" string="Service Level"
                        context="{'group_by':'service_level_id'}"
                        domain="[('service_level_id', '!=', None)]"/>
                <filter name="group_warehouse_location" string="Warehouse Location"
                        context="{'group_by':'warehouse_id'}"/>
            </search>
        </field>
    </record>

    <!--Form view-->
    <record model="ir.ui.view" id="service_levels_view_form">
        <field name="name">service.levels.view.form</field>
        <field name="model">product.classification.info</field>
        <field name="arch" type="xml">
            <form default_order="product_id asc" create="false" edit="true" delete="false">
                <sheet>
                    <group class="row">
                        <group class="col">
                            <field name="product_id" string="Name"/>
                            <field name="service_level_id" string="Service Level"/>
                        </group>
                        <group class="col">
                            <field name="warehouse_id" string="Warehouse Location"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Action window-->
    <record id="action_service_levels" model="ir.actions.act_window">
        <field name="name">Service Levels</field>
        <field name="res_model">product.classification.info</field>
        <field name="view_mode">tree,form</field>
        <field name="type">ir.actions.act_window</field>
        <field name="search_view_id" ref="view_service_level_filter"/>
        <field name="context">{
            'search_default_group_service_level': 1,
            'search_default_group_warehouse_location': 1}
        </field>
        <field name="domain">[('client_available', '=', True)]</field>
        <field name="target">current</field>
    </record>

     <record model="ir.actions.act_window.view" id="action_service_levels_tree">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="service_levels_view_tree"/>
        <field name="act_window_id" ref="action_service_levels"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_service_levels_form">
        <field name="sequence" eval="1"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="service_levels_view_form"/>
        <field name="act_window_id" ref="action_service_levels"/>
    </record>

    <menuitem
            id="menu_service_levels"
            name="Service Levels"
            parent="stock.menu_stock_inventory_control"
            action="forecast_base.action_service_levels"
            groups="base.group_user"/>
</odoo>
