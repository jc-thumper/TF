<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_generate_summarized_historical_demand" model="ir.cron">
            <field name="name">SI: Summarize Historical Demand</field>
            <field name="model_id" ref="mps_connector.model_mrp_production_schedule"/>
            <field name="state">code</field>
            <field name="code">model.cron_summarized_historical_data()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="doall">0</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(weeks=1)).strftime('%Y-%m-%d 07:00:00')" />
        </record>
    </data>
</odoo>
