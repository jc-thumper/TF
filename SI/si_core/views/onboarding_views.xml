<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="si_onboarding_container">
        <div class="modal si_onboarding_modal si_technical_modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Remove Announcement</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-label="Close">&amp;times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Do you want to remove this announcement panel?</p>
                    </div>
                    <div class="modal-footer">
                        <a type="action" class="btn btn-primary" data-dismiss="modal"
                        data-toggle="collapse" href=".si_onboarding_container"
                        t-att-data-model="close_model" t-att-data-method="close_method">
                            Remove
                        </a>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Discard</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="si_onboarding_container collapse show">
            <div t-att-class="'si_onboarding ' + ('si_onboarding_completed ' if steps_completed else ' ') + classes"
                 t-att-style="'background-image:url(' + bg_image + ')'">
                <div class="si_onboarding_wrap">
                    <a href="#" data-toggle="modal" data-target=".si_onboarding_modal"
                       class="float-right si_onboarding_btn_close">
                        <i class="fa fa-times" title="Close the onboarding panel" />
                    </a>
                    <div class="si_onboarding_steps">
                        <t t-raw="0" />
                    </div>
                    <div t-att-class="'si_onboarding_completed_message text-center' + (' si_onboarding_steps_done' if state.get('onboarding_state') in ('done', 'just_done') else '') + (' si_onboarding_steps_just_done' if state.get('onboarding_state') == 'just_done' else '')">
                        <i class="fa fa-check text-success mr8" />
                        <span class="h3 mr16">
                            <t t-if="text_completed" t-esc="text_completed" />
                            <t t-else="">Nice work! Your configuration is done.</t>
                        </span>
                        <div class="btn btn-primary btn-sm">
                            <a type="action" class="btn btn-primary" data-toggle="collapse" href=".si_onboarding_container"
                            t-att-data-model="close_model" t-att-data-method="close_method">
                                Close
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </template>
    <template id="si_onboarding_info">
        <div t-att-class="'si_onboarding_step ' + ('si_onboarding_done' if state in ('done', 'just_done') else 'si_onboarding_current') + (' si_onboarding_just_done' if state == 'just_done' else '')">
            <t t-call="base.onboarding_confetti" />
            <div class="si_onboarding_progress d-none d-md-inline-block progress">
                <div class="progress-bar"/>
            </div>
            <div class="si_onboarding_step_content">
                <div class="si_onboarding_step_content_info">
                    <h4 class="si_onboarding_step_title mt16">
                        <a>
                            <t t-esc="title" />
                        </a>
                    </h4>
                    <p class="mb16">
                        <t t-esc="description" />
                    </p>
                </div>
            </div>
        </div>
    </template>
</odoo>
