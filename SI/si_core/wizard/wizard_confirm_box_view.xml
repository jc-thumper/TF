<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_si_core_confirm_box_form" model="ir.ui.view">
        <field name="name">Confirm Message</field>
        <field name="model">si_core.confirm.box</field>
        <field name="arch" type="xml">
            <form string="Confirmation">
                <center>
                    <field name="message" readonly="1"/>
                </center>
                <footer>
                    <button name="accept_confirmation" type="object" string="YES" class="oe_highlight"/>
                    <button name="cancel_confirmation" type="object" string="NO"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
