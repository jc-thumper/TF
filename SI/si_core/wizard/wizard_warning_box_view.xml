<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_si_core_warning_box_form" model="ir.ui.view">
        <field name="name">Warning Message</field>
        <field name="model">si_core.warning.box</field>
        <field name="arch" type="xml">
            <form string="Warning">
                <center>
                    <field name="message" readonly="1"/>
                </center>
                <footer>
                    <button name="accept_confirmation" type="object" string="OK" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
