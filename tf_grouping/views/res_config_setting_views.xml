<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="tf_res_config_settings_view_form_purchase" model="ir.ui.view">
        <field name="name">tf.res.config.settings.view.form.inherit.purchase</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='po_lock']" position="after">
                <h2>RFQ Grouping</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="allow_grouping_bom"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="allow_grouping_bom" string="RFQ Grouping"/>
                            <div class="text-muted">
                                Allow group RFQs by BOM
                            </div>
                            <div class="content-group" attrs="{'invisible': [('allow_grouping_bom', '=', False)]}">
                                <div class="row mt16">
                                    <label for="vendor_ids" class="col-lg-4 o_light_label"/>
                                    <field name="vendor_ids" widget="many2many_tags"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>